<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/list_view_recipes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_add_recipe" />

    <ImageButton
        android:id="@+id/button_add_recipe"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_add_24"
        android:contentDescription="@string/add_recipe_button_description"
        app:layout_constraintTop_toBottomOf="@id/list_view_recipes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/button_search_recipe"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/search_button"
        app:layout_constraintTop_toBottomOf="@id/list_view_recipes"
        app:layout_constraintStart_toEndOf="@id/button_add_recipe"
        app:layout_constraintEnd_toStartOf="@id/button_delete_recipe"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/button_delete_recipe"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/delete_button"
        android:contentDescription="@string/delete_recipe_button_description"
        app:layout_constraintTop_toBottomOf="@id/list_view_recipes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>